<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="415dp"
    android:layout_height="845dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#837B7B"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-92dp">

        <EditText
            android:id="@+id/fragmentListaExerciciosSearchText"
            android:layout_width="243dp"
            android:layout_height="38dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:background="#000000"
            android:ems="10"
            android:fontFamily="@font/mazzardsoftm_light"
            android:hint="Alimento..."
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/fragmentListaExerciciosSearchBtn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/fragmentListaExerciciosSearchBtn"
            android:layout_width="57dp"
            android:layout_height="53dp"
            android:layout_marginTop="5dp"
            android:background="#00FFFFFF"
            android:contentDescription="TODO"
            android:onClick="filterAlimentos"

            android:src="@drawable/ic_baseline_search_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fragmentListaExerciciosSearchText"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintVertical_bias="0.407" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragmentListaExerciciosRecycler"
        android:layout_width="match_parent"
        android:layout_height="765dp"
        android:background="#1E1E1E"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>