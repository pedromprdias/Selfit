<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayoutListaExercicios"
    android:fitsSystemWindows="true"
    android:background="#F7FFFFFF"
    android:minWidth="19dp">

    <ScrollView
        android:layout_width="wrap_content"
        android:background="#F7FFFFFF"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F7FFFFFF"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarListaExercicios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1E1E1E"
                app:subtitleTextColor="#FFFFFF"
                android:fontFamily="@font/mazzardsoftm_light"
                app:titleTextAppearance="@style/tiago"
                app:titleTextColor="#FFFFFF">

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/mazzardsoftm_light"
                    app:titleTextAppearance="@style/tiago"
                    android:textSize="20sp" />
            </androidx.appcompat.widget.Toolbar>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#837B7B">

                <ImageButton
                    android:id="@+id/listaExerciciosSearchBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/ic_baseline_search_24"
                    android:onClick="filterExercicios"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"

                    tools:ignore="VectorDrawableCompat" />

                <EditText
                    android:id="@+id/listaExerciciosNomeSearch"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginBottom="8dp"
                    android:autoText="false"
                    android:background="#FFFFFF"
                    android:ems="10"
                    android:fontFamily="@font/mazzardsoftm_light"
                    android:inputType="textPersonName"
                    android:textColor="#FFFFFF"
                    app:layout_constraintBottom_toTopOf="@+id/listaExerciciosMusculosSearch"
                    app:layout_constraintStart_toStartOf="parent" />

                <Spinner
                    android:id="@+id/listaExerciciosMusculosSearch"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="16dp"
                    android:background="#FFFFFF"
                    android:entries="@array/musculos"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/listaExerciciosNomeSearch" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/exerciciosListRecycler"
                android:layout_width="match_parent"
                android:layout_height="640dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_drawer_header"
        app:menu="@menu/navigation_drawer_menu">
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>