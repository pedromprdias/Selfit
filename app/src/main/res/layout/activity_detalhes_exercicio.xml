<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayoutDetalhesExercicio"
    android:fitsSystemWindows="true"
    android:background="#F7FFFFFF"
    android:minWidth="19dp">

    <ScrollView
        android:layout_width="wrap_content"
        android:background="#F7FFFFFF"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F7FFFFFF"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarDetalhesExercicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0000FF"
                app:subtitleTextColor="#0A0A0A"
                app:titleTextColor="#111111">

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </androidx.appcompat.widget.Toolbar>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="600dp">

                <TextView
                    android:id="@+id/exercicioDetalhesName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:text="TextView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/exercicioDetalhesImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="@+id/exercicioDetalhesName"
                    app:layout_constraintTop_toBottomOf="@+id/exercicioDetalhesName"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/exercicioDetalhesDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="TextView"
                    app:layout_constraintStart_toStartOf="@+id/exercicioDetalhesImage"
                    app:layout_constraintTop_toBottomOf="@+id/exercicioDetalhesImage" />

                <TextView
                    android:id="@+id/exercicioDetalhesMusculosValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="TextView"
                    app:layout_constraintStart_toEndOf="@+id/exercicioDetalhesMusculosText"
                    app:layout_constraintTop_toTopOf="@+id/exercicioDetalhesMusculosText" />

                <TextView
                    android:id="@+id/exercicioDetalhesMaxPeso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="TextView"
                    app:layout_constraintStart_toStartOf="@+id/exercicioDetalhesMusculosText"
                    app:layout_constraintTop_toBottomOf="@+id/exercicioDetalhesMusculosText" />

                <TextView
                    android:id="@+id/exercicioDetalhesMaxOverall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/melhorPerformance"
                    app:layout_constraintStart_toStartOf="@+id/exercicioDetalhesMaxPesoData"
                    app:layout_constraintTop_toBottomOf="@+id/exercicioDetalhesMaxPesoData" />

                <TextView
                    android:id="@+id/exercicioDetalhesMusculosText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/musculosTrabalhados"
                    app:layout_constraintStart_toStartOf="@+id/exercicioDetalhesDescription"
                    app:layout_constraintTop_toBottomOf="@+id/exercicioDetalhesDescription" />

                <TextView
                    android:id="@+id/exercicioDetalhesMaxOverallData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="TextView"
                    app:layout_constraintStart_toStartOf="@+id/exercicioDetalhesOverallValues"
                    app:layout_constraintTop_toBottomOf="@+id/exercicioDetalhesOverallValues" />

                <TextView
                    android:id="@+id/exercicioDetalhesMaxPesoData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="TextView"
                    app:layout_constraintStart_toStartOf="@+id/exercicioDetalhesMaxPeso"
                    app:layout_constraintTop_toBottomOf="@+id/exercicioDetalhesMaxPeso" />

                <TextView
                    android:id="@+id/exercicioDetalhesOverallValues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="TextView"
                    app:layout_constraintStart_toStartOf="@+id/exercicioDetalhesMaxOverall"
                    app:layout_constraintTop_toBottomOf="@+id/exercicioDetalhesMaxOverall" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_drawer_header"
        app:menu="@menu/navigation_drawer_menu">
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>